<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="textButtonFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/samimfd</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="headerTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/samimfd</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/typography2</item>
    </style>

</resources>
